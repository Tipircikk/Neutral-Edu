
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Users can read their own profile. Admins can read any profile.
      // Users can write to their own profile. Admins can write to any profile.
      allow read, write: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    // Add other collection rules here, e.g., for summary logs or saved summaries
    // match /summaryLogs/{logId} {
    //   allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true; // Only admins can read logs
    //   allow create: if request.auth != null; // Any authenticated user can create a log (e.g., when a summary is made)
    // }
  }
}
