
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    // Users can read and update their own profile.
    // Admins can read and update any user profile.
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      allow create: if request.auth != null && request.auth.uid == userId; // Allow user creation on signup
      allow update: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      // Deny delete for now to prevent accidental data loss
      allow delete: if false;

      // Admins can list all users
      match /users {
        allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      }
    }

    // SupportTickets Collection
    // Users can create their own tickets.
    // Users can read their own tickets.
    // Admins can read all tickets and update any ticket (e.g., status, adminReply).
    match /supportTickets/{ticketId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true; // Admins can update any ticket
      // Deny delete for now
      allow delete: if false;

      // Messages Subcollection within a SupportTicket
      // Users can add messages to their own tickets.
      // Admins can add messages to any ticket.
      // Both users (for their tickets) and admins can read messages.
      match /messages/{messageId} {
        allow create: if request.auth != null && 
                        ( (get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId == request.auth.uid && request.resource.data.senderId == request.auth.uid && request.resource.data.senderType == 'user') ||
                          (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true && request.resource.data.senderId == request.auth.uid && request.resource.data.senderType == 'admin') );
        allow read: if request.auth != null && (get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
        // Messages are immutable once created
        allow update: if false;
        allow delete: if false;
      }
       match /messages {
        allow list: if request.auth != null && (get(/databases/$(database)/documents/supportTickets/$(ticketId)).data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      }
    }
    // Admins can list all support tickets
     match /supportTickets {
        allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      }


    // PricingConfig Collection
    // Everyone can read the pricing configuration.
    // Only admins can write/update the pricing configuration.
    match /pricingConfig/{docId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
